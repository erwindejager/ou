    <bpel:sequence name="LoanApprovalProcedure">
        
        <!-- Receive input from requester. 
             Note: This maps to operation defined in Loan.wsdl 
             -->
        <bpel:receive name="receiveLoanRequest" partnerLink="client"
                 portType="tns:Loan"
                 operation="process" variable="input"
                 createInstance="yes"/>
        
        <!-- Generate reply to synchronous request -->
        <bpel:if name="If_amount_lt_10000">
            <bpel:condition expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[$input.payload/tns:input="0"]]></bpel:condition>
            <bpel:sequence name="amount_lt_10000">
                <bpel:invoke name="InvokeRiskAssessment" partnerLink="pl1" operation="process" portType="tns:Loan" inputVariable="Request" outputVariable="output">
                </bpel:invoke>
                <bpel:if name="If_risk_eq_low">
                    <bpel:condition expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[$input.payload/tns:input="0"]]></bpel:condition>
                    <bpel:sequence name="Risk_low">
                        
                        <bpel:assign validate="no" name="Assign_approved">
                            <bpel:copy>
                                <bpel:from>
                                    <bpel:literal xml:space="preserve">1</bpel:literal>
                                </bpel:from>
                                <bpel:to variable="decision"></bpel:to>
                            </bpel:copy>
                        </bpel:assign>
                    </bpel:sequence><bpel:else>
                        <bpel:sequence name="Risk_medium_or_high">
                            
                            <bpel:assign validate="no" name="Assign_approval_needed">
                                <bpel:copy>
                                    <bpel:from>
                                        <bpel:literal xml:space="preserve">1</bpel:literal>
                                    </bpel:from>
                                    <bpel:to variable="decision"></bpel:to>
                                </bpel:copy>
                            </bpel:assign>
                        </bpel:sequence>
                    </bpel:else></bpel:if>
            </bpel:sequence>
            <bpel:else>
                <bpel:sequence name="amount_ge_10000">
                    
                    <bpel:assign validate="no" name="Assign_approval_needed">
                        <bpel:copy>
                            <bpel:from>
                                <bpel:literal xml:space="preserve"><![CDATA[]]></bpel:literal>
                            </bpel:from>
                            <bpel:to variable="decision"></bpel:to>
                        </bpel:copy>
                    </bpel:assign>
                </bpel:sequence>
            </bpel:else>
        </bpel:if>
        <bpel:if name="If_approval_needed">
            <bpel:condition expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[$input.payload/tns:input="2"]]></bpel:condition>
            <bpel:sequence name="approval_needed">
                
                <bpel:invoke name="InvokeLoanApproval" partnerLink="pl1" operation="process" inputVariable="Request" outputVariable="output"></bpel:invoke>
                <bpel:assign validate="no" name="Assign_approval_result"><bpel:copy>
                                    <bpel:from>
                                        <bpel:literal xml:space="preserve">1</bpel:literal>
                                    </bpel:from>
                                    <bpel:to variable="decision"></bpel:to>
                                </bpel:copy>
    <bpel:copy>
                                    <bpel:from>
                                        <bpel:literal xml:space="preserve">1</bpel:literal>
                                    </bpel:from>
                                    <bpel:to variable="decision"></bpel:to>
    <bpel:to variable="decision"></bpel:to>
</bpel:copy>
    <bpel:copy>
                                    <bpel:from>
                                        <bpel:literal xml:space="preserve">1</bpel:literal>
                                    </bpel:from>
                                    <bpel:to variable="decision"></bpel:to>
    <bpel:to variable="decision"></bpel:to>
</bpel:copy>

                </bpel:assign>
            </bpel:sequence>
            <bpel:else>
                <bpel:empty name="is_approved"></bpel:empty>
            </bpel:else>
        </bpel:if>
        
        <bpel:reply name="replyLoanDecision" 
               partnerLink="client"
               portType="tns:Loan"
               operation="process" 
               variable="output"
               />
    </bpel:sequence>
</bpel:process>

