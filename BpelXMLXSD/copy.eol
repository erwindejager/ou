operation BPEL!t_copy transform(sb : Any, context : Map) {
	newline(sb);
	var to = getFromPath(sb, context,self);
	if (to <> null and to.length() > 0) {
		sb.append(to);
	} else {
		getTo(self).transform(sb, context);
	}
	sb.append("=");
	getFrom(self).transform(sb, context);
	sb.append(";");
	
//	transformChildren(sb, self);
} 